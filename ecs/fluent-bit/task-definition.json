{
  "family": "FluentBit",
  "containerDefinitions": [
    {
      "name": "fluentbit",
      "image": "falcosecurity/fluentbit-ecs-falco",
      "essential": true,
      "cpu": 10,
      "memory": 512,
      "environment": [
        {
          "name": "FLB_LOG_LEVEL",
          "value": "info"
        }
      ],
      "mountPoints": [
        {
          "containerPath": "/var/run",
          "sourceVolume": "socket"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "socket",
      "host": {
        "sourcePath": "/var/run"
      }
    }
  ]
}
